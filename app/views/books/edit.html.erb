<div class="bookedit">
<h1>Editing Book</h1>
<% if @book.errors.any? %>
    <%= @book.errors.count %>An error occurred
    <ul>
     <% @book.errors.full_messages.each do |message| %>
     <li><%= message %></li>
     <% end %>
    </ul>
   <% end %>


<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>

 <label for="book title">Title</label>
 <br>
 <%= f.text_field :title %>

 <br>
 <label for="book body">Body</label>
 <br>
 <%= f.text_area :body %>

 <br>
 <%= f.submit 'Update Book' %>
 <br>

 <span>
 <%= link_to "show", book_path(@book.id) %>
</span>
|
<a href = "/books">Back</a>

 <% end %>

 </div>